<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_image_height"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@color/black"
            android:textSize="@dimen/item_title_text_size"
            android:singleLine="true"
            android:text="真功夫" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_star_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_red" />

            <ImageView
                android:id="@+id/iv_star_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_red" />

            <ImageView
                android:id="@+id/iv_star_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_red" />

            <ImageView
                android:id="@+id/iv_star_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_red" />

            <ImageView
                android:id="@+id/iv_star_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_red" />

            <ImageView
                android:id="@+id/iv_yi_chong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/yi_chong" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_cardname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白金卡" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/sprite_line_vertic" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="(申请后7折优惠)" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>